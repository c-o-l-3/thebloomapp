{
  "version": 1,
  "vertical": "wedding-venue",
  "defaults": {
    "timingPrinciples": [
      "Optimize for the next milestone, not maximum information",
      "Keep pricing details after the tour so staff can frame options",
      "Each touchpoint has one primary CTA",
      "Email and SMS must each stand alone if the other is opted out"
    ],
    "primaryTimezone": "America/New_York"
  },
  "journeys": [
    {
      "key": "inquiry_to_tour_booking",
