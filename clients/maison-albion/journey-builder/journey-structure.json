      "touchpoints": [
        {
          "key": "tp_00_email_welcome",
          "type": "email",
          "timing": {
            "delay": 0,
            "unit": "hours"
          },
          "objective": "Confirm inquiry and make tour booking feel easy",
          "cta": {
            "label": "Book a Tour",
            "url": "{{tour_booking_link}}"
          },
          "contentBlocks": [
            {
              "type": "welcome",
              "required": true
            },
            {
              "type": "what_to_expect",
              "required": true
            },
            {
              "type": "social_proof",
              "required": false
            },
            {
              "type": "signature_spaces",
              "required": false
            }
          ],
          "infoGating": {
            "pricing": "none",
            "proposal": "none"
          }
        },
        {
          "key": "tp_00_sms_welcome",
          "type": "sms",
          "timing": {
            "delay": 10,
            "unit": "minutes"
          },
          "objective": "Nudge tour booking with minimal friction",
          "cta": {
            "label": "Book a Tour",
            "url": "{{tour_booking_link}}"
          },
          "infoGating": {
            "pricing": "none",
            "proposal": "none"
          }
        },
        {
          "key": "tp_01_email_prepare",
          "type": "email",
          "timing": {
            "delay": 24,
            "unit": "hours"
          },
          "objective": "Help them feel confident choosing tours to compare",
          "cta": {
            "label": "See Tour Times",
            "url": "{{tour_booking_link}}"
          },
          "contentBlocks": [
            {
              "type": "tour_prep_checklist",
              "required": true
            },
            {
              "type": "fit_signals",
              "required": true
            }
          ],
          "infoGating": {
            "pricing": "light",
            "proposal": "none"
          }
        },
        {
          "key": "tp_03_sms_barriers",
          "type": "sms",
          "timing": {
            "delay": 72,
            "unit": "hours"
          },
          "objective": "Remove barriers and invite questions",
          "cta": {
            "label": "Book a Tour",
            "url": "{{tour_booking_link}}"
          },
          "infoGating": {
            "pricing": "none",
            "proposal": "none"
          }
