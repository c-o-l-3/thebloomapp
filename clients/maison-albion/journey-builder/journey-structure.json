          "type": "email",
          "timing": {
            "delay": 24,
            "unit": "hours",
            "relativeTo": "tour_start",
            "direction": "before"
          },
          "objective": "Confirm attendance and remove last-mile friction",
          "cta": {
            "label": "Confirm or Reschedule",
            "url": "{{manage_tour_link}}"
          },
          "contentBlocks": [
            {
              "type": "logistics",
              "required": true
            }
          ],
          "infoGating": {
            "pricing": "none",
            "proposal": "none"
          }
        },
        {
          "key": "tp_24h_sms_confirm",
          "type": "sms",
          "timing": {
            "delay": 24,
            "unit": "hours",
            "relativeTo": "tour_start",
            "direction": "before"
